@model Movie

@using _036_MoviesMvcWissen.Helpers

@{
    ViewBag.Title = "Edit Movie";
    var years = ViewBag.Years as SelectList;
    var directors = ViewBag.directors as MultiSelectList;
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Movies", FormMethod.Post))
{
    @Html.Hidden("Id", Model.Id)
    <div class="form-group">
        @Html.Label("tbName", "Name:")
        @Html.TextBox("Name", Model.Name, new { @class = "form-control", placeholder = "Enter movie name", id = "tbName" })
    </div>
    <div class="form-group">
        @Html.Label("ddlProductionYear", "Production Year:")
        @Html.DropDownList("ProductionYear", years, new { @class = "form-control", id = "ddlProductionYear" })
    </div>
    <div class="form-group">
        @Html.Label("tbBoxOfficeReturn", "Box Office Return")
        @Html.TextBox("BoxOfficeReturn", Model.BoxOfficeReturn, new { @class = "form-control", placeHolder = "Enter movie office return", id = "tbBoxOfficeReturn" })
    </div>

    <div class="form-group">
        @Html.Label("ddlDirectors","Directors:")
        @Html.ListBox("directorIds",directors, new { @class = "form-control", id = "ddlDirectors" })
    </div>

    @*<input type="submit" class="btn btn-success" value="Save" />*@
    @Html.SaveButton()
    @:&nbsp;

    @*<input type="reset" class="btn btn-warning" value="Clear" />*@
    @Html.Button("Clear" , "btn btn-warning", "reset")
    <br />
    <label class="text-danger">@TempData["Info"]</label>

}
